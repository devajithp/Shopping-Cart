<div class="section">

    
  <div class="container">

         <table class="table mt-5">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Image</th>
                    <th>Description</th>
                    <th><a class="btn btn-secondary" href="/admin/add-product">AddProduct</a></th>
                </tr>
            </thead>
            <tbody>
                {{#each product}}
                <tr>
                    <td>{{this.Name}}</td>
                    <td>{{this.Price}}</td>
                    <td ><img style="height: 50px; width:50px;" src="/product-images/{{this._id}}.jpg"></td>
                    <td>{{this.Description}}</td>
                    <td><a class="btn btn-info" href="/admin/edit-product/{{this._id}}">Edit</a></td>
                    <td><a class="btn btn-danger mr-4" href="/admin/delete-product/{{this._id}}" onclick="return confirm('Are you sure you want to delete {{this.Name}}')">Delete</a></td>
                </tr>
                {{/each}}
               
            </tbody>
         </table>

  </div>
</div>